<section class="card col-6">
  <div href="/post/{{id}}">
    <header>{{username}} {{title}}</header>
<h2>{{post_date}}</h2>  
<h3>{{content}}</h3>
<h5>{{comment}}</h5>

<button class="btn new-comment" value="New comment">Add comment</button>
<form method="POST" class="hide comment-create">
    <input type="text" name="comment" class="comment-content">
<button class="btn comment-create "  value="{{id}}">Create comment</button>
</form>
</div>
</section>